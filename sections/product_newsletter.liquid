{%- if section.settings.showproductcare -%}
<div class="{% if template contains product %}signup-div {% else %} pro_template {% endif %}">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
               <div class="product_heading">
            	<h2 class="h2-heading testing-head">{{ section.settings.news_txt}}</h2>
              </div>
            </div> 
        </div>
        <br>
      {% form 'customer'%}
        <form class="form-inline">
          <input type="text" id="name" placeholder="Enter your first name" name="contact[name]">
          <input type="email" id="email" placeholder="Enter your email" name="contact[email]">
          <button class="btn-solid-reg" type="submit">{{section.settings.sign_txt}}</button>
        </form>
      {% endform %}
    </div>
</div>
{% endif %}
{% schema %}
  {
    "name": "Home Newsletter",
    "settings": [
	{	
		"type": "checkbox",
        "id": "showproductcare",
        "label": "Enable Section",
        "default": true
	 },
		
		{
			"type":"text",
            "id":"news_txt",
            "label":"Newsletter Heading",
			"default":"SIGNUP FOR FREE GOODIES!"
		},
		{
			"type":"text",
            "id":"sign_txt",
            "label":"Button Text",
			"default":"SIGN ME UP!"
		}
	],
	"presets": [
      {
        "name": "Product Newsletter",
        "category": "Home Newsletter"
      }
    ]
  }
{% endschema %}

