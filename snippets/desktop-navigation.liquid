<div class="desktop-navigation">
  <nav role="navigation">
    <ul>
      {%- for link in linklists.new-main-menu.links -%}
      <li {% if link.links != blank %} class="have-dropdown"{% endif %} class="hvr-underline-from-left">
        <a href="{{ link.url }}" {% if link.active %}aria-current="page"{% endif %} >
          {{ link.title }}
        </a>
        {%- if link.links != blank -%}
        <ul class="child-menu">
          {%- for child_link in link.links -%}
          <li>
            <a href="{{ child_link.url }}" {% if child_link.active %}aria-current="page"{% endif %}>
              {{ child_link.title }}
            </a>
            {%- if child_link.links != blank -%}
            <ul class="grand-child-menu">
              {%- for grandchild_link in child_link.links -%}
              <li>
                <a href="{{ grandchild_link.url }}" {% if grandchild_link.active %}aria-current="page"{% endif %}>
                  {{ grandchild_link.title }}
                </a>
              </li>
              {%- endfor -%}
            </ul>
            {%- endif -%}

          </li>
          {%- endfor -%}
        </ul>
        {%- endif -%}

      </li>
      {%- endfor -%}
    </ul>
  </nav>
</div>