
<div class="bg-img4">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-xl-6 commit_top">
                <div class="text-container">
                    <div class="section-title">
                    </div>
                  	<img class="img-fluid comment-logo " src="https://cdn.shopify.com/s/files/1/0284/2391/3547/files/image_2021_09_09T07_36_43_143Z.png?v=1631177720" alt="alternative">
                    <br><br>
                    <h2 class="commient">{{ section.settings.our_txt | upcase}}</h2>
                  	{{ section.settings.our_description}}
                     <a class="btn-solid-reg d-none d-sm-block" href="{{section.settings.shop_url}}">{{section.settings.shop_txt | upcase}}</a>
                </div> 
            </div>
            <div class="col-lg-6 col-xl-6">
                <div class="image-container image_container">
                  {% if section.settings.our_image  != blank %}
                      <img class="img-fluid fluid_cls " src="{{section.settings.our_image | img_url:"master"}}" alt="alternative">
                      {% else %}
                        <img class="img-fluid fluid_cls " src="https://cdn.shopify.com/s/files/1/0284/2391/3547/files/home2.png?v=1629182714" alt="alternative">
 					{% endif %} 
                  <a class="btn-solid-reg d-block d-sm-none" href="{{section.settings.shop_url}}">{{section.settings.shop_txt | upcase}}</a>
              </div> 
            </div>
        </div>
    </div> 
</div>
{% schema %}
  {
    "name": "Home Commitment",
    "settings": [
	{
			"type": "text",
			"id" :"our_txt",
			"label":"Text Heading",
			"default":"OUR COMMITMENT"
		},
		{
			"type": "richtext",
			"id" :"our_description",
			"label":"Add Description",
			"default":"<p>Honesty. Integrity. Transparency. We are here for you and the ones you love most. Weâ€™re not a massive, faceless corporation. We appreciate your feedback, so we can continue to make our products and services the best they can be. Thank you for your support.</p>"
         },
		{
			"type": "text",
			"id" :"shop_txt",
			"label":"Button",
			"default":"SHOP NOW"
		},
		{
			"type": "url",
			"id" :"shop_url",
			"label":"Add Button URl"
		},
		{
			"type" :"image_picker",
			"id" :"our_image",
			"label":"Add Image Here"
		}
],
	"presets": [
      {
        "name": "Home Commitment",
        "category": "Home Commitment"
      }
    ]
  }
{% endschema %}

