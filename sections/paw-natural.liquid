{%- if section.settings.showproductcare -%}
<div class="basic-2  bg-img13">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-xl-7">
                <div class="text-container">
                  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">{{ section.settings.ingredient_txt | upcase }}</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="pills-use-tab" data-bs-toggle="pill" data-bs-target="#pills-use" type="button" role="tab" aria-controls="pills-how-to-use" aria-selected="false">{{ section.settings.how-to-use | upcase }}</button>
  </li>
   <!--<li class="nav-item" role="presentation">
    <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">{{ section.settings.nutritional_txt | upcase }}</button>
  </li>-->
</ul>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
  		<ul class="ingredient-tab">
                          {% for block in section.blocks %}
                            {% if block.type == "ingredient" %}
                              <li><i class="fa fa-check orng-chk"></i> {{ block.settings.ingredient_txt }}</li>
                            {% endif %}
                          {% endfor %}

                      </ul>
  </div>
   <div class="tab-pane how-to-use-tab fade" id="pills-use" role="tabpanel" aria-labelledby="pills-use-tab">
    {{ section.settings.product_how_to_use}}
  </div>
  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
   {{ section.settings.product_nutritional}}
  </div>
  
</div>
                
			
                </div>
            </div>
            <div class="col-lg-5 col-xl-5">
                <div class="image-container">
                  {% if section.settings.facts_images != blank %}
                   <img  class="img-fluid" src="{{section.settings.facts_images | img_url:'master'}}" alt="alternative">
                  {% else %}
                    <img class="img-fluid" src="https://cdn.shopify.com/s/files/1/0284/2391/3547/files/pro-6.png?v=1629832629" alt="alternative">
              	{% endif %}	 
              </div> <!-- end of image-container -->
            </div>
        </div>
    </div>
</div>
{% endif %}	 
{% schema %}
  {
    "name": "Ingredients and Facts",
    "settings": [
	{	
		"type": "checkbox",
        "id": "showproductcare",
        "label": "Enable Section",
        "default": true
	 },
        {
          "type": "text",
          "id" :"ingredient_txt",
          "label":"Heading Text",
		  "default":"INGREDIENTS"
         },
         {
          "type": "text",
          "id" :"nutritional_txt",
          "label":"Heading Text",
          "default":"NUTRITIONAL"
         },
		{
          "type": "text",
          "id" :"how-to-use",
          "label":"How ",
          "default":"HOW TO USE"
         },
			{
			"type": "image_picker",
			"id" :"facts_images",
			"label":"Add Right Image"
    		},
 		{
			"type": "richtext",
			"id" :"product_nutritional",
			"label":"Add Nutritional Description"
		},
		{
			"type": "richtext",
			"id" :"product_how_to_use",
			"label":"Add How to Use Description"
		}
	],
   "blocks":[
		{
			"type":"ingredient",
			"name":"Ingredient",
			"settings":[
			   {
                "type": "text",
			    "id" :"ingredient_txt",
			    "label":"Ingredient Text"
			   }
               
			]

		},
       {
			"type":"nutritional",
			"name":"Nutritional",
			"settings":[
			   {
                "type": "text",
			    "id" :"nutritional_txt",
			    "label":"Nutritional Text"
			   }
              
			]
		}
       
        
	]
  }
{% endschema %}

{% stylesheet %}
body .basic-2  #pills-tab .nav-item {
    width: 33.3%;
}
body .basic-2  #pills-tab .nav-item button{
    font-size:16px;
}

{% endstylesheet %}

